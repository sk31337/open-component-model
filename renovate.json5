{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    'config:recommended',
    'config:best-practices',
    'security:openssf-scorecard',
    'helpers:pinGitHubActionDigests',
    ':rebaseStalePrs'
  ],
  prHourlyLimit: 0,
  'git-submodules': {
    enabled: true
  },
  packageRules: [
    {
      "matchCategories": [
        "golang"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ],
      "enabled": true
    },
    {
      matchManagers: [
        'gomod'
      ],
      groupName: 'OCM Monorepo Go Module Dependencies',
      groupSlug: 'ocm-monorepo',
      matchPackageNames: [
        'ocm.software/open-component-model/**'
      ]
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "find . -name \"go.mod\" -type f -path '*/integration/*' -exec dirname {} \\; | while read dir; do echo \"Running explicit go mod tidy for integration test in $dir\"; cd \"$dir\" && go mod tidy && cd - > /dev/null; done"
    ],
    "fileFilters": ["**/go.mod", "**/go.sum"],
    "executionMode": "branch"
  },
}
